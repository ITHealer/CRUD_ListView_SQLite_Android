<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="#ddd"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_them"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm công việc"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#ff00"
        android:gravity="center"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/edit_tencv"
        android:hint="Nhập tên công việc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_them"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_them"
        android:text="Thêm"
        android:layout_below="@+id/edit_tencv"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_huy"
        android:text="Hủy"
        android:layout_below="@+id/edit_tencv"
        android:layout_toRightOf="@+id/btn_them"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>

</RelativeLayout>